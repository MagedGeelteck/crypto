# MySQL Optimization Configuration for Low Memory Server
# Add these to /etc/mysql/mysql.conf.d/mysqld.cnf or /etc/my.cnf

[mysqld]
# Basic Settings
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
datadir = /var/lib/mysql

# Memory Optimization for Small Server (512MB-1GB RAM)
# Adjust these based on your server's total RAM

# InnoDB Settings (Most Important)
innodb_buffer_pool_size = 256M          # 50-70% of available RAM for DB
innodb_log_file_size = 64M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 2      # Better performance, slight risk on crash
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_open_files = 400

# Query Cache (Deprecated in MySQL 8.0+, but useful in 5.7)
query_cache_type = 1
query_cache_limit = 2M
query_cache_size = 32M
query_cache_min_res_unit = 2K

# Thread Cache
thread_cache_size = 8
thread_stack = 256K

# Table Cache
table_open_cache = 400
table_definition_cache = 400

# Connection Settings
max_connections = 50                     # Reduced for low memory
max_connect_errors = 100
connect_timeout = 10
wait_timeout = 600
interactive_timeout = 600

# Buffer Sizes (Keep Small for Low Memory)
join_buffer_size = 2M
sort_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 1M
key_buffer_size = 32M
tmp_table_size = 32M
max_heap_table_size = 32M

# Logging (Disable for Production to Save Resources)
slow_query_log = 0
long_query_time = 2
log_error = /var/log/mysql/error.log

# Binary Logging (Disable if not needed)
skip-log-bin

# Performance Schema (Disable to Save Memory)
performance_schema = OFF

# Disable DNS Lookups
skip-name-resolve

# Character Set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Optimization for Solid State Drives
# Uncomment if using SSD
# innodb_flush_neighbors = 0
# innodb_io_capacity = 2000

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
